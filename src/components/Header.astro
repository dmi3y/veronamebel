---
import { Image } from "astro:assets";
import logo from "~/assets/logo.png";
import Vcard from "./Vcard.astro";

const site = Astro.site;
---

<header>
  <h1>
    <a href={site} title="Мебель в Бишекеке - Верона Мебель">
      <Image class="logo" alt="Verona Mebel" src={logo} format="webp" />
    </a>
    <div class="phone">+996 (555) 68 45 68</div>
  </h1>
</header>
<style is:global>
  /* Header */
  header {
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
    align-items: center;
    margin: 50px 0 100px;
  }
  header h1 {
    font-size: 210%;
    text-shadow: 1px 5px 7px var(--bg-color);
    text-align: right;
    margin: 0;
  }

  header .logo {
    width: 100%;
    height: 100%;
    max-width: 485px;
  }

  header a {
    text-decoration: none;
    color: #fff;
  }

  header a:hover {
    text-decoration: none;
  }

  .phone {
    font-weight: 300;
  }

  @media (max-width: 1024px) {
    header {
      flex-direction: column;
    }
  }

  @media (max-width: 600px) {
    header h1 {
      font-size: 150%;
      text-align: center;
    }
  }
</style>
