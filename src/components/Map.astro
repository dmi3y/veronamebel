---
import { Image } from "@astrojs/image/components";

const api = "https://maps.googleapis.com/maps/api";
const center = "center=42.86084750459291,74.61916751779304";
const markers =
  "markers=color:red|label:VM|42.86082817103534,74.62424729700155";
const zoom = "zoom=15";
const size = "size=640x300";
const maptype = "maptype=roadmap";
const map_id =
  "map_id=798e4870bdbaa618&key=AIzaSyAyAg1_pM-lBrHrLElNyozvSUK5qWwsJB8";

const mapsrc = `${api}/staticmap?${center}&${markers}&${zoom}&${size}&${maptype}&${map_id}`;

const maphref =
  "https://maps.google.com/maps?expflags=enable_star_based_justifications:true&ie=UTF8&cid=17452686713591379491&q=Verona+%D0%9C%D0%B5%D0%B1%D0%B5%D0%BB%D1%8C&iwloc=A";
---

<a href={maphref}
  ><Image
    alt="Карта проезда"
    src={mapsrc}
    class="roadmap"
    width="640"
    height="300"
    format="webp"
  /></a
>
<style>
  /* Map */
  .roadmap {
    display: block;
    margin: 20px auto;
    height: 100%;
    width: 100%;
    max-width: 100%;
  }
</style>
