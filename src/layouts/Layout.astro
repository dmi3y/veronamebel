      is:inline
      src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4efdef9509f4bd72"
    ></script>
    <style is:global>
      :root {
        --color-links: #08fcf8;
        --color-header: #eee;
        --color-header-news: #999;
        --color-header-text: #999;
        --color-flash: #fff;
        --color-flash-opacity: rgba(255, 255, 255, 0.9);
        --color-bg: #000;
        --color-bg-opacity: rgba(0, 0, 0, 0.4);

        --width-page: 955px;
        --width-main-column: 650px;

        --font-family-main: Verdana, Geneva, sans-serif;
        --font-size-main: 18px;
      }
      .clr {
        clear: both;
      }

      @keyframes flash {
        from {
          background-color: var(--color-flash-opacity);
        }
      }

      html,
      body {
        font-family: var(--font-family-main);
        font-size: var(--font-size-main);
        color: #fff;
        padding: 0;
        margin: 0;
        height: 100%;
      }

      a {
        color: var(--color-links);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      /* Layout */
      #main-holder {
        z-index: 10;
      }

      .wrapper {
        position: relative;
        margin: 0 auto;
        width: 80%;
        max-width: 1900px;
        min-height: 100%;
      }

      section {
        padding-bottom: 66px;
      }

      section > div {
        background-color: var(--color-bg-opacity);
        padding: 15px;
      }

      section > div:target {
        animation-name: flash;
        animation-duration: 1s;
      }

      /* Map */
      .roadmap {
        display: block;
        margin: 20px auto;
        max-width: 100%;
      }

      /* Certificates */
      .certificates {
        text-align: center;
      }

      .cert {
        width: 32%;
        margin-left: 1%;
      }

      .cert:first-child {
        margin-left: 0;
      }

      /* Header menu */
      header h1 {
        font-size: 210%;
        text-shadow: 1px 5px 7px var(--color-bg);
        text-align: right;
        margin: 15px 5px;
      }

      header .logo {
        font-family: "Alex Brush", cursive;
        font-size: 250%;
      }

      header a {
        text-decoration: none;
        color: #fff;
      }

      header a:hover {
        text-decoration: none;
      }

      .phone {
        font-weight: 300;
      }

      .menu {
        list-style: none;
        margin: 100px 0 0;
        padding: 0;
      }

      .menu a {
        color: #fff;
      }

      .menu a:hover {
        text-decoration: none;
        color: var(--color-links);
      }

      .menu li {
        background-color: var(--color-bg-opacity);
        float: left;
        margin: 0 0 1px 1px;
        font-size: 1.5em;
        width: calc(100% / 3 - 1px);
        text-align: center;
        padding: 10px 0;
      }

      .menu li:first-child {
        margin-left: 0;
      }

      /* Footer */
      footer {
        position: absolute;
        height: 65px;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: center;
      }

      footer > section {
        background-color: var(--color-bg-opacity);
      }

      footer > section:target {
        animation-name: flash;
        animation-duration: 1s;
      }

      .contacts {
        padding: 15px 15px 45px;
      }

      /* Wallpaper */
      #show-wallpaper {
        display: none;
      }

      #show-wallpaper:checked + #show-wallpaper-lbl b {
        display: inline;
      }

      #show-wallpaper:checked + #show-wallpaper-lbl strong {
        display: none;
      }

      #show-wallpaper:checked + #show-wallpaper-lbl #main-holder {
        display: none;
      }

      #show-wallpaper-lbl {
        background-color: var(--color-bg-opacity);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 30;
        cursor: pointer;
      }

      #show-wallpaper-lbl:hover ~ #main-holder {
        opacity: 0.4;
      }

      #show-wallpaper-lbl b {
        display: none;
      }

      .wallpaper {
        background-image: url(/src/wallpapers/1.jpg);
        background-repeat: no-repeat;
        background-position: 50% 0;
        background-size: cover;
        background-attachment: fixed;
        position: absolute;
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 0;
      }

      /* Responsive */
      @media (max-width: 1024px) {
        .menu {
          margin-top: 50px;
        }
        .menu li {
          font-size: 1.3em;
        }
        .cert {
          width: 40%;
        }
      }

      @media (max-width: 800px) {
        .menu li {
          font-size: 1.2em;
        }
        #show-wallpaper,
        #show-wallpaper-lbl {
          display: none;
        }
      }

      @media (max-width: 600px) {
        .wrapper {
          width: 99%;
        }

        header h1 {
          font-size: 150%;
          text-align: center;
        }

        .menu li {
          float: none;
          width: 100%;
        }

        .cert {
          width: 100%;
          margin-left: 0;
        }
      }
    </style>
  </body>
</html>
