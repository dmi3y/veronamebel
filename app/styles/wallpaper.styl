#showWallpaper
    display none

    &:checked
        + #showWallpaperLbl
            b
                display inline
            strong
                display none

        ~ #mainHolder
            display none

#showWallpaperLbl
    transparerentBG()
    position fixed
    top 0
    left 0
    z-index 30
    cursor pointer

    &:hover
        ~ #mainHolder
            opacity .4

    b
        display none

.wallPaper
    background-image url(http://mickricereto.files.wordpress.com/2012/09/3_siematic-s3-graphite-grey_lotus-white.jpg)
    // background-image url(http://shkafi-kupe.by/intereri/2012/may/04/barnaya_stoika.jpg)
    // background-image url(http://www.adresmebel.ru/assets/images/MICHELANGELO2%20I.jpg)
    background-repeat no-repeat
    background-position 50% 0
    background-size cover
    background-attachment fixed
    position absolute
    position fixed
    top 0; right 0; bottom 0; left 0
    z-index 0