extends /layouts/_default

block content
  .orderForm
    form(name="client", method="POST", action="send")
      .innerForm
        .name
          label(for="name") Имя:
          input#name(name="client[name]", placeholder="Ваше Имя", autofocus, required)
          .clr
        .phone
          label(for="phone") Телефон:
          input#phone(name="client[phone]", placeholder="Контактный Телeфон", required)
          .clr
        .comment
          label#comment Комментарий:
            div
              textarea(name="client[commnent]", placeholder="Дополнения, пожелания, контактные данные, емайл, скайп итд...")
            .buttons
              |Вы можете
              label 
                span Прикрeпить файл(ы)
                input(type="file", multiple name="client[files]")
      .buttons 
        label
          span Отправить сообщение
          input(type="submit", value="Отправить")
